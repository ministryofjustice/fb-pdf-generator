<% content_for :head do %>
  <meta charset="utf-8">
  <style type="text/css">
  body {
  font: normal 17px Liberation Sans, sans-serif;
  color: #0C0D0D;
}
h1 {
  font-size: 35px;
}
h2 {
  font-size: 20px;
}
.subheading {
  font-size: 25px;
  color: gray;
  font-weight: lighter;
}
.watermark {
  text-align: right;
  font-size: 26px;
  font-weight: lighter;
  letter-spacing: 2px;
  padding-bottom: 20px;
}
hr.dark {
  border: 1px solid black;
}

table {
  border-collapse: collapse;
  width: 100%;
}
tr {
  border-bottom:1px solid #B1B4B6;
}
tr:last-child {
  border-bottom: none;
}
th, td {
  padding: 15px 0px 15px 0px;
  text-align: left;
}
td.question {
  font-weight: bold;
  margin-right: 10px;
  width: 30%;
  word-wrap: break-word;
}

  </style>
<% end %>

<% content_for :body do %>
  <h3 class="watermark">OFFICIAL-SENSITIVE</h3>

  <% unless @sub_heading.nil? %>
    <h2 class="subheading"><%= @sub_heading %></h2>
  <% end %>
  <h1><%= @heading %></h1>

  <% @sections.each do |section| %>
    <% if section[:summary_heading] %>
      <h2><%= section[:summary_heading] %></h2>
        <hr class="dark">
        <h2><%= section[:heading] %></h2>

    <% else %>
      <h2><%= section[:heading] %></h2>
      <hr class="dark">
    <% end %>

    <table>
    <% section[:questions].each do |question| %>
        <tr>
          <td class="question"><%= question[:label] %></td>
          <td><%= question[:human_value] %></td>
        </tr>
    <% end %>
    </table>
  <% end %>
<% end %>
<%= render template: "layouts/application" %>
